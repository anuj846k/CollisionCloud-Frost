# ===========================================
# REQUIRED - Must be set
# ===========================================

# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-generate-random-64-char-string

# PostgreSQL Database (Neon or any PostgreSQL)
# Format: postgresql+asyncpg://user:password@host/database?sslmode=require
DATABASE_URL=postgresql+asyncpg://username:password@your-host.neon.tech/your-database?sslmode=require


# ===========================================
# OPTIONAL - Have defaults
# ===========================================

# Application
APP_NAME=AccidentReconstruction
DEBUG=true

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# File Uploads
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=500


# ===========================================
# CLOUDINARY - For video/image storage
# ===========================================

CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret


# ===========================================
# KESTRA - Workflow orchestration
# ===========================================

KESTRA_API_URL=http://localhost:8080/api/v1


# ===========================================
# MODEL CACHE - For Oumi/HuggingFace models
# (Optional - use if storing models on external SSD)
# ===========================================

# HF_CACHE_DIR=/path/to/external/ssd/huggingface
# HF_HOME=/path/to/external/ssd/huggingface
# TRANSFORMERS_CACHE=/path/to/external/ssd/transformers
# TORCH_HOME=/path/to/external/ssd/torch

GEMINI_API_KEY=your-gemini-key-here
ELEVENLABS_API_KEY=your-elevan-labs-key-here